

<script>
    tt_cancel_show='/'
    tt_cancel_destination='/'

    function set_ajaxURL_for_suggestions() {
    url = "/product/find_by_name_or_code?search_str=";
    $('touchscreenInput'+tstCurrentPage).setAttribute('ajaxURL', url);
    listSuggestions(tstCurrentPage);
  }

</script>

<% form_tag "view", :method => :post do %>
  <%= text_field_tag :product, nil, 
    {:field_type => 'alpha', 
     :helpText => 'Enter item name/item code to find',
     :tt_onLoad => 'set_ajaxURL_for_suggestions();',
     :ajaxURL => '' 
    }
  %>

  <%= submit_tag "Find product" %>
<% end %>
